<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentMatch</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <nav class="navbar">
            <div class="nav-content">
                <a href="@Url.Action("Index", User.IsInRole("HR") ? "HR" : User.IsInRole("Supervisor") ? "Supervisor" : "Employee")" class="logo">TalentMatch</a>
                <ul class="nav-menu">
                    @if (User.IsInRole("HR"))
                    {
                        <li><a href="@Url.Action("Index", "HR")">Dashboard</a></li>
                        <li><a href="@Url.Action("PendingUsers", "HR")">Usuarios Pendientes</a></li>
                        <li><a href="@Url.Action("JobOffers", "HR")">Ofertas</a></li>
                    }
                    @if (User.IsInRole("Supervisor"))
                    {
                        <li><a href="@Url.Action("Index", "Supervisor")">Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Supervisor")">Empleados</a></li>
                    }
                    @if (User.IsInRole("Employee") || User.IsInRole("Supervisor") || User.IsInRole("HR"))
                    {
                        <li><a href="@Url.Action("Index", "Employee")">Mi Perfil</a></li>
                        <li><a href="@Url.Action("JobOffers", "Employee")">Vacantes</a></li>
                    }
                </ul>
                <div class="user-info">
                    <span class="user-name">@User.Identity?.Name</span>
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-secondary btn-sm">Cerrar Sesión</button>
                    </form>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">@TempData["Error"]</div>
        }
        
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
