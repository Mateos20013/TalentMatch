@model InternalTalentManagement.ViewModels.LoginViewModel
@{
    Layout = "_LayoutLogin";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>TalentMatch</h2>
            <p>Sistema de Gestión de Talento Interno</p>
        </div>
        <div class="login-body">
            <form method="post" asp-controller="Account" asp-action="Login">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="alert alert-error"></div>
                
                <div class="form-group">
                    <label asp-for="Email">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="correo@empresa.com" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label>
                        <input asp-for="RememberMe" type="checkbox" /> @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>

                <button type="submit" class="btn">Iniciar Sesión</button>

                <div class="form-footer">
                    ¿No tienes cuenta? <a asp-action="Register">Regístrate aquí</a>
                </div>
            </form>
        </div>
    </div>
</div>
